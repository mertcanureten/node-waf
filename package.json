{
  "name": "node-waf",
  "version": "0.3.0",
  "description": "Node.js için Açık Kaynak Web Application Firewall - OWASP Top 10 saldırı vektörlerine karşı kapsamlı, modüler ve community-driven çözüm",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint lib/**/*.js test/**/*.js",
    "lint:fix": "eslint lib/**/*.js test/**/*.js --fix",
    "dev": "nodemon examples/basic-server.js",
    "dev:advanced": "nodemon examples/advanced-server.js",
    "build": "echo 'No build step required for Node.js'",
    "start": "node examples/basic-server.js",
    "start:advanced": "node examples/advanced-server.js"
  },
  "keywords": [
    "waf",
    "web-application-firewall",
    "security",
    "owasp",
    "xss",
    "sqli",
    "rate-limiting",
    "middleware",
    "express",
    "koa",
    "fastify",
    "adaptive-learning",
    "anomaly-detection"
