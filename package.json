  "author": "Node-WAF Community",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "xss-clean": "^0.1.4",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mertcanureten/node-waf.git"
  },
  "bugs": {
    "url": "https://github.com/mertcanureten/node-waf/issues"
  },
  "homepage": "https://github.com/mertcanureten/node-waf#readme"
